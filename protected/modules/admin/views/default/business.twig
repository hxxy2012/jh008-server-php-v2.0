<script type="text/template" id="business_edit_template">
	<div class="lc-ui-form" name="" method="post" action="#" id="">
		<div class="lc-ui-form-item">
			<p class="lc-ui-tab">修改商家<span>(带*为必填)</span></p>
		</div>
