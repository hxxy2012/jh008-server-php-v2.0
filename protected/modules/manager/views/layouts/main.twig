<!DOCTYPE html>
<html>
    <head>
        <meta http-equiv="Content-Type" content="text/html;charset=UTF-8">
        <title>零创科技后台系统</title>
        <link media="all" href="{{ this.module.assetsUrl }}/sea-modules/alice/one/1.2.2/one.css" rel="stylesheet">
        <link rel="stylesheet" href="{{ this.module.assetsUrl }}/sea-modules/arale/dialog/1.3.1/dialog.css" />
        <link rel="stylesheet" href="{{ this.module.assetsUrl }}/static/css/compontent.css" />
        <link rel="stylesheet" href="{{ this.module.assetsUrl }}/static/css/main.css" />
        {% block stylesheet %}{% endblock %}
    </head>
    <body>
        {% set type = App.user.getType %}
        <div class="header">
            <div class="header-wrap">
                <div class="header-topbar">
                   <!--  <a class="topbar-item" id="logout" href="javascript:;">退出登录</a> -->
                    <ul class="header-nav fn-clear">
                        <li class="switch-city-wrap">
                            <a id="switchCity" href="javascript:;">切换城市</a>
                            <div class="city-wrap" id="cityWrap">
                                <i class="iconfont" title="上三角形"></i>
                                <ul class="city-nav" id="cityNav">

                                </ul>
                            </div>                            
                        </li>
                        <li><a id="logout" href="javascript:;">退出登录</a></li>
                        <li><a href="javascript:;">{{ App.user.getName }}</a></li>
                    </ul>
                </div>
            </div>
        </div>

        <div class="container">
            <div class="left-side">
                <div class="ls-wrap" id="lsWrap">
                    <div class="ui-box">
                        <div class="ui-box-head">
                            <h3 class="ui-box-head-title">个人设置</h3>
                            <i class="rotate slide-up"></i>
                        </div>
                        <div class="ui-box-container">
                            <ul class="ui-list ui-list-nosquare  ui-list-graylink">
                                <li class="ui-list-item">
                                    <a href="/manager/default/personalUpdatePass">修改密码</a>
                                </li>
                            </ul>
                        </div>
                    </div> 
                    {% if type == 1 or type == 11 or type == 101 or type == 102 %}               
                    <div class="ui-box">
                        <div class="ui-box-head">
                            <h3 class="ui-box-head-title">资讯类</h3>
                            <i class="rotate slide-up"></i>
                        </div>
                        <div class="ui-box-container">
                            <ul class="ui-list ui-list-nosquare  ui-list-graylink">
                                <li class="ui-list-item">
                                    <a class="{% if this.getAction().getId()=='information'  %}sel{% endif %}" href="/manager/default/information">攻略列表</a>
                                </li>
                                 <li class="ui-list-item">
                                    <a class="{% if this.getAction().getId()=='ticket'  %}sel{% endif %}" href="/manager/default/ticket">票务列表</a>
                                </li>
                                <li class="ui-list-item">
                                    <a class="{% if this.getAction().getId()=='memory'  %}sel{% endif %}" href="/manager/default/memory">记忆列表</a>
                                </li>
                            </ul>
                        </div>
                    </div>
                    {% endif %}
                    {% if type == 1 or type == 11 %}
                    <div class="ui-box">
                        <div class="ui-box-head">
                            <h3 class="ui-box-head-title">轮播</h3>
                            <i class="rotate slide-up"></i>
                        </div>
                        <div class="ui-box-container">
                            <ul class="ui-list ui-list-nosquare  ui-list-graylink">
                                <li class="ui-list-item">
                                    <a class="{% if this.getAction().getId()=='carousel'  %}sel{% endif %}" href="/manager/default/carousel">轮播列表</a>
                                </li>
                            </ul>
                        </div>
                    </div>
                    {% endif %}
                    {% if type == 1 or type == 11 or type == 101 or type == 102 %}
                    <div class="ui-box">
                        <div class="ui-box-head">
                            <h3 class="ui-box-head-title">活动板块</h3>
                            <i class="rotate slide-up"></i>
                        </div>
                        <div class="ui-box-container">
                            <ul class="ui-list ui-list-nosquare  ui-list-graylink">
                                <li class="ui-list-item">
                                    <a class="{% if this.getAction().getId()=='actList'  %}sel{% endif %}" href="/manager/default/actList">活动列表</a>
                                </li>
                                {% if type == 1 or type == 102 %}
                                <li class="ui-list-item">
                                    <a class="{% if this.getAction().getId()=='actAdd'  %}sel{% endif %}" href="/manager/default/actAdd">活动上传</a>
                                </li>
                                {% endif %}
                                <li class="ui-list-item">
                                    <a class="{% if this.getAction().getId()=='actHot'  %}sel{% endif %}" href="/manager/default/actHot">热门活动列表</a>
                                </li> 
                                {% if type == 1 %}                             
                                <li class="ui-list-item">
                                    <a class="{% if this.getAction().getId()=='actTags'  %}sel{% endif %}" href="/manager/default/actTags">活动标签管理</a>
                                </li>
                                {% endif %}
                            </ul>
                        </div>
                    </div>
                    {% endif %}
                    <div class="ui-box">
                        <div class="ui-box-head">
                            <h3 class="ui-box-head-title">人物</h3>
                            <i class="rotate slide-up"></i>
                        </div>
                        <div class="ui-box-container">
                            <ul class="ui-list ui-list-nosquare  ui-list-graylink">
                                <li class="ui-list-item">
                                    <a class="{% if this.getAction().getId()=='figureUsers'  %}sel{% endif %}" href="/manager/default/figureUsers">用户列表</a>
                                </li>
                                <li class="ui-list-item">
                                    <a class="{% if this.getAction().getId()=='figureMasters'  %}sel{% endif %}" href="/manager/default/figureMasters">达人列表</a>
                                </li>
                                <li class="ui-list-item">
                                    <a class="{% if this.getAction().getId()=='figureMastersSort'  %}sel{% endif %}" href="/manager/default/figureMastersSort">达人列表排序</a>
                                </li>
                                <li class="ui-list-item">
                                    <a class="{% if this.getAction().getId()=='figureApplyVips'  %}sel{% endif %}" href="/manager/default/figureApplyVips">申请达人列表</a>
                                </li>
                                <li class="ui-list-item">
                                    <a class="{% if this.getAction().getId()=='figureTags'  %}sel{% endif %}" href="/manager/default/figureTags">用户标签</a>
                                </li>
                            </ul>
                        </div>
                    </div>
                    {% if type == 101 or type == 1 %}
                    <div class="ui-box">
                        <div class="ui-box-head">
                            <h3 class="ui-box-head-title">管理员模块</h3>
                            <i class="rotate slide-up"></i>
                        </div>
                        <div class="ui-box-container">
                            <ul class="ui-list ui-list-nosquare  ui-list-graylink">
                                <li class="ui-list-item">
                                    <a class="{% if this.getAction().getId()=='managers'  %}sel{% endif %}" href="/manager/default/managers">管理员列表</a>
                                </li>                             
                            </ul>
                        </div>
                    </div>
                    {% endif %}
                    <div class="ui-box">
                        <div class="ui-box-head">
                            <h3 class="ui-box-head-title">其他</h3>
                            <i class="rotate slide-up"></i>
                        </div>
                        <div class="ui-box-container">
                            <ul class="ui-list ui-list-nosquare  ui-list-graylink">
                                <li class="ui-list-item">
                                    <a class="{% if this.getAction().getId()=='tipoff'  %}sel{% endif %}" href="/manager/default/tipoff">向我们爆料</a>
                                </li>   
                                <li class="ui-list-item">
                                    <a class="{% if this.getAction().getId()=='citys'  %}sel{% endif %}" href="/manager/default/citys">添加城市</a>
                                </li>                   
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
            <div class="right-side">
                <div class="right-side-container rsc">
                    {% block content %}{% endblock %}
                </div>
            </div>
        </div>
        
        

        {% block  template %}{% endblock %}

        <script>
            var roleType = "{{ App.user.getType }}"
            var basePath = "{{ this.module.assetsUrl }}";
            var imgUrlPre = "{{ App.params.imgUpload.downUrlPre}}";
        </script>
        <script type="text/javascript"  src="{{ this.module.assetsUrl }}/sea-modules/seajs/seajs/2.2.1/sea.js"></script>
        <script type="text/javascript"  src="{{ this.module.assetsUrl }}/static/js/third/artTemplate.js"></script>
        <script type="text/javascript"  src="{{ this.module.assetsUrl }}/static/js/main/config.js"></script>


        {% block javascript %}{% endblock %}

    </body>
</html>
